#!/usr/bin/env php
<?php

require_once realpath(__DIR__ . '/../vendor/autoload.php');

if ($argc < 2) {
    printf("Usage: %s <username> [<pattern>]\n", $argv[0]);
    exit;
}

try {
    (new \Ork\Bgg\Collection())->sync($argv[1], $argv[2] ?? null);
} catch (\Throwable $e) {
    echo $e->getMessage() . "\n";
}
